/* pages/home/home.wxss */
.wxml, body {
  padding: 0;
}
 .page {
  position: absolute;
  height: 100%;
  width: 750rpx;
  background-color: #f5f5f5
}
.slide-image{
    width: 100%;
}
.body{
  width: 100%;
  height: 100%;
}
.body_inner{
  text-align: center; 
  position: relative;
  top: -15rpx;
  width: 96%;
  /* height: 80rpx; */
  margin: 0 auto;
  line-height: 86rpx;
  font-size: 30rpx;
}
.mode_a{ 
  border-top-left-radius: 15rpx;  
  position: relative;
  float: left;
  width: 50%;
  background-color: #FFF500;
}
.mode_b{  
  border-top-right-radius: 15rpx;  
  position: relative;
  float: right;
  width: 50%;
  background-color: #E9E7E7; 
}
.position{
  width: 100%;
  /* font-size: 2rpx; */
  /* height: 10rpx; */
}
.position_a{
  background-color: #f9f7f7; 
  width: 40%;
  float: left;
  position: relative;
}
.position_b{
  background-color: #f9f7f7; 
  width: 20%;
  float: left;
  position: relative;
  font-size: 46rpx;
}
.position_c{
  background-color: #f9f7f7; 
  width: 40%;
  float: right;
  position: relative;
}
.info{
  width: 100%;
  padding: 25rpx;
   background-color: white;
   height: 240rpx; 
   border-top: 5px solid #f5f5f5;
  
}
.info_left{
  width: 20%;
  float: left;
  position: relative;
  margin-top: 30rpx;
  vertical-align:middle;
}
.info_avatar {
  margin: 5px;
  width: 55px;
  height: 55px;
  border-radius: 50px;
}
.info_name{
  font-size: 30rpx;
}
.gap{
  height: 160rpx;
}
.info_left_a{
  width: 100%;
  text-align: center;
}
.info_left_b{
  width: 100%;
  text-align:center;
  
}
.info_right{
  font-size: 30rpx;
  width: 70%;
  float: right;
  position: relative;
  line-height: 80rpx;
  border-left: 1.2px solid #d9d9d9;
  padding-left: 21rpx;
}
.get_list{
  display: inline;
  font-size: 30rpx;
  padding:12rpx 65rpx 12rpx 65rpx;
  margin-left: 45rpx;
  background-color: yellow;
  position: relative;
  top: 10rpx;
}
.icont_time{
  padding-left: 70rpx;
}
.icont_time{
  position: relative;
  top: -20rpx;
  font-size: 33rpx;
  color: #8b8b8b;  
}
.time_time{
  position: relative;
  top: -20rpx;
  padding-left: 12rpx;
  font-size: 28rpx;
  color: #8b8b8b;
}