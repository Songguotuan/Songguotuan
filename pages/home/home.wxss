/* pages/home/home.wxss */
.wxml, body {
  padding: 0;
}
 .all {
  position: absolute;
  height: 100%;
  width: 750rpx;
  text-align: center;
  background-color: #f5f5f5
}
.slide-image{
    width: 100%;
}
.body{
  width: 100%;
  height: 100%;
}
.body_inner{
  width: 96%;
  height: 90rpx;
  margin: 0 auto;
  background-color: #FFF500;
  text-align: center;
  line-height: 90rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
.mode_a{
  position: relative;
  float: left;
  width: 50%;
}
.mode_b{
  position: relative;
  float: right;
  width: 50%;
  background-color: #E9E7E7;
}
.position{
  width: 100%;
  height: 50rpx;
}
.position_a{
  width: 40%;
  float: left;
  position: relative;
}
.position_b{
  width: 20%;
  float: left;
  position: relative;
  font-size: 46rpx;
}
.position_c{
  width: 40%;
  float: right;
  position: relative;
}
